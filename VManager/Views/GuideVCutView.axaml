<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VManager.ViewModels"
             x:Class="VManager.Views.GuideVCutView"
             x:DataType="vm:AcercaDeViewModel">

    <StackPanel Spacing="16">

        <TextBlock Text="{Binding L[Guide.VCut.Title]}"
                   FontSize="22"
                   FontWeight="Bold"
                   TextWrapping="Wrap"/>

        <TextBlock Text="{Binding L[Guide.VCut.Description]}"
                   TextWrapping="Wrap"
                   FontSize="15"/>

        <StackPanel Spacing="8">
            <TextBlock Text="{Binding L[Guide.VCut.HowTo.Title]}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>

            <TextBlock Text="{Binding L[Guide.VCut.HowTo.Step1]}" TextWrapping="Wrap" FontSize="14"/>
            <TextBlock Text="{Binding L[Guide.VCut.HowTo.Step2]}" TextWrapping="Wrap" FontSize="14"/>
            <TextBlock Text="{Binding L[Guide.VCut.HowTo.Step3]}" TextWrapping="Wrap" FontSize="14"/>
            <TextBlock Text="{Binding L[Guide.VCut.HowTo.Step4]}" TextWrapping="Wrap" FontSize="14"/>
        </StackPanel>

        <!-- GIF acÃ¡ -->
        <!-- <Image Source="/Assets/guides/vcut.gif" Stretch="Uniform"/> -->

        <StackPanel Spacing="8">
            <TextBlock Text="{Binding L[Guide.VCut.Notes.Title]}"
                       FontSize="16"
                       FontWeight="SemiBold"/>

            <TextBlock Text="{Binding L[Guide.VCut.Notes.A]}" TextWrapping="Wrap" FontSize="14"/>
            <TextBlock Text="{Binding L[Guide.VCut.Notes.B]}" TextWrapping="Wrap" FontSize="14"/>
            <TextBlock Text="{Binding L[Guide.VCut.Notes.C]}" TextWrapping="Wrap" FontSize="14"/>
        </StackPanel>

    </StackPanel>
</UserControl>