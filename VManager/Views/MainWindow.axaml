                                    <Setter Property="Background" Value="{DynamicResource ToggleButtonBackgroundPressed }" />      
                                    <Setter Property="BorderBrush" Value="{DynamicResource ToggleButtonBorderBrush }" />
                                    <Setter Property="Foreground" Value="{DynamicResource ToggleButtonForeground }" />
                                </Style>
                                <Style Selector=":checked /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource ToggleButtonBorderBrushChecked}" />
                                    <Setter Property="Foreground" Value="{DynamicResource ToggleButtonForegroundChecked}" />
                                </Style>
                                <Style Selector=":checked:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource ToggleButtonBackgroundPointerOver}" />
                                    <Setter Property="BorderBrush" Value="{DynamicResource ToggleButtonBorderBrushCheckedPointerOver}" />
                                    <Setter Property="Foreground" Value="{DynamicResource ToggleButtonForegroundCheckedPointerOver }" />
                                </Style>
                                <Style Selector=":checked:disabled /template/ ContentPresenter#PART_ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource ToggleButtonBackgroundCheckedDisabled}" />
                                    <Setter Property="BorderBrush" Value="{DynamicResource ToggleButtonBorderBrushCheckedDisabled}" />
                                    <Setter Property="Foreground" Value="{DynamicResource ToggleButtonForegroundCheckedDisabled}" />
                                </Style>
                            </ToggleButton.Styles>
                        </ToggleButton>
                    </StackPanel>
                </Grid>
            </SplitView.Pane>

            <!-- CONTENIDO PRINCIPAL -->
            <SplitView.Content>
                <Grid>
                    <DockPanel Margin="0,0,0,0">
                        <!-- Botón Cambiar Tema -->
                        <ToggleButton DockPanel.Dock="Top"
                                      x:Name="ToggleTheme"
                                      Theme="{DynamicResource ThemeToggleButton}"
                                      Content="Cambiar Tema"
                                      HotKey="T"
                                      HorizontalAlignment="Right"
                                      Margin="0,15,15,0"
                                      IsChecked="{Binding IsDarkTheme}"
                                      Command="{Binding ToggleThemeCommand}" />
                        
                        <!-- Footer -->
                        <Border DockPanel.Dock="Bottom" Padding="0 0 0 0" Background="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Margin="0 25 0 5"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           FontSize="12"
                                           Opacity="0.7">
                                    <Run Text="{Binding L[Footer.Version]}"/>
                                    <Run Text="{Binding VersionText}"/>
                                </TextBlock>

                                <Grid Grid.Column="1"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="-70 0 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="20"/> <!-- Espacio fijo para el corazón -->
                                    </Grid.ColumnDefinitions>
    
                                    <Button Grid.Column="0"
                                            Content="{Binding L[Footer.Title]}"
                                            Padding="20 20 35 20"
                                            Command="{Binding OpenGitHubCommand}"
                                            FontSize="15"
                                            Opacity="0.7"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Cursor="Hand"
                                            ZIndex="1"/>
    
                                    <TextBlock Grid.Column="1"
                                               Text="❤"
                                               FontSize="15"
                                               Margin="-40 2 0 0"
                                               Foreground="Red"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               ZIndex="0"
                                               Opacity="0.4">
                                        <TextBlock.Styles>
                                            <Style Selector="TextBlock">
                                                <Style.Animations>
                                                    <Animation Duration="0:0:1.2" IterationCount="Infinite" Easing="CubicEaseInOut">
                                                        <KeyFrame Cue="0%">
                                                            <Setter Property="Margin" Value="-40 2 0 0"/>
                                                            <Setter Property="FontSize" Value="15"/>
                                                        </KeyFrame>
                                                        <KeyFrame Cue="2%">
                                                            <Setter Property="Margin" Value="-42.166 2 0 0"/>
                                                            <Setter Property="FontSize" Value="20"/>
                                                        </KeyFrame>
                                                        <KeyFrame Cue="16%">
                                                            <Setter Property="Margin" Value="-40 2 0 0"/>
                                                            <Setter Property="FontSize" Value="15"/>
                                                        </KeyFrame>
                                                        <KeyFrame Cue="27%">
                                                            <Setter Property="Margin" Value="-42.166 2 0 0"/>
                                                            <Setter Property="FontSize" Value="20"/>
                                                        </KeyFrame>
                                                        <KeyFrame Cue="65%">
                                                            <Setter Property="Margin" Value="-40 2 0 0"/>
                                                            <Setter Property="FontSize" Value="15"/>
                                                        </KeyFrame>
                                                    </Animation>
                                                </Style.Animations>
                                            </Style>
                                        </TextBlock.Styles>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Mensaje de bienvenida -->
                        <TextBlock DockPanel.Dock="Top" 
                                   FontWeight="Bold" 
                                   Text="{Binding WelcomeMessage}" 
                                   FontSize="25" 
                                   Margin="0,30,0,20"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"
                                   IsVisible="{Binding IsWelcomeVisible}" />

                        <!-- Descripción -->
                        <TextBlock DockPanel.Dock="Top"
                                   FontSize="15" 
                                   Margin="40,0,40,0" 
                                   HorizontalAlignment="Center" 
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   MaxWidth="650"
                                   Opacity="0.8"
                                   IsVisible="{Binding IsWelcomeVisible}"
                                   Text="{Binding L[General.AppDescription]}" />

                        <!-- Herramientas disponibles -->
                        <Border DockPanel.Dock="Top" 
                                Margin="40,35,40,0"
                                IsVisible="{Binding IsWelcomeVisible}"
                                BorderBrush="Transparent" 
                                BorderThickness="2" 
                                CornerRadius="10" 
                                Padding="20" 
                                ClipToBounds="True"
                                Background="Transparent"
                                HorizontalAlignment="Center"
                                MaxWidth="750">
                            <StackPanel Spacing="15" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding L[General.Border.Title1]}" 
                                           FontWeight="SemiBold" 
                                           FontSize="17" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"/>
                                
                                <!-- Lista de herramientas -->
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <TextBlock FontSize="14" Opacity="0.9" HorizontalAlignment="Center" TextAlignment="Center">
                                        <Run FontWeight="SemiBold" Text="{Binding L[General.Border.Items1.Item1Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item1Description]}" />
                                    </TextBlock>
                                    
                                    <TextBlock FontSize="14" Opacity="0.9" HorizontalAlignment="Center" TextAlignment="Center">
                                        <Run FontWeight="SemiBold" Text="{Binding L[General.Border.Items1.Item2Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item2Description]}" />
                                    </TextBlock>
                                    
                                    <TextBlock FontSize="14" Opacity="0.9" HorizontalAlignment="Center" TextAlignment="Center">
                                        <Run FontWeight="SemiBold" Text="{Binding L[General.Border.Items1.Item3Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item3Description]}" />
                                    </TextBlock>
                                    
                                    <TextBlock FontSize="14" Opacity="0.9" HorizontalAlignment="Center" TextAlignment="Center">
                                        <Run FontWeight="SemiBold" Text="{Binding L[General.Border.Items1.Item4Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item4Description]}" />
                                    </TextBlock>
                                    
                                    <TextBlock FontSize="14" Opacity="0.9" HorizontalAlignment="Center" TextAlignment="Center">
                                        <Run FontWeight="SemiBold" Text="{Binding L[General.Border.Items1.Item5Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item5Description]}" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Sección de ayuda -->
                        <Border DockPanel.Dock="Top" 
                                Margin="40,20,40,0"
                                IsVisible="{Binding IsWelcomeVisible}"
                                BorderBrush="{DynamicResource BorderBrushPrimary}" 
                                BorderThickness="2" 
                                CornerRadius="10" 
                                Padding="20" 
                                ClipToBounds="True"
                                Background="{DynamicResource PanelBackgroundBrush}"
                                HorizontalAlignment="Center"
                                MaxWidth="750">
                            <StackPanel Spacing="12">
                                <TextBlock FontSize="15" 
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Opacity="0.85">
                                    <Run Text="{Binding L[General.WelcomePanel.GuideInfo]}"/>
                                    <Run FontWeight="SemiBold" 
                                         Foreground="{DynamicResource AccentBrush}"
                                         Text="{Binding L[General.WelcomePanel.AboutButton]}"/>
                                    <Run Text="{Binding L[General.WelcomePanel.InSidebar]}"/>
                                </TextBlock>
                                
                                <Separator Margin="0,5" Opacity="0.3"/>
                                
                                <StackPanel Spacing="5" HorizontalAlignment="Center">
                                    <TextBlock FontSize="13" 
                                               TextAlignment="Center"
                                               Opacity="0.7"
                                               FontWeight="SemiBold"
                                               Text="{Binding L[General.WelcomePanel.QuickShortcuts]}"/>

                                    <TextBlock FontSize="13" 
                                               TextAlignment="Center"
                                               Opacity="0.7">
                                        <Run Text="{Binding L[General.WelcomePanel.PressText]}"/>
                                        <Run FontWeight="SemiBold" Text="1-5" Foreground="{DynamicResource AccentBrush}"/>
                                        <Run Text="{Binding L[General.WelcomePanel.ToSwitchTools]}"/>
                                        <Run Text="{Binding L[General.WelcomePanel.OrText]}"/>
                                        <Run FontWeight="SemiBold" Text="C" Foreground="{DynamicResource AccentBrush}"/>
                                        <Run Text="{Binding L[General.WelcomePanel.ForConfiguration]}"/>
                                    </TextBlock>
                                    
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <ContentControl x:Name="ContentArea" Content="{Binding CurrentView}" Background="Transparent"/>
                    </DockPanel>
                </Grid>
            </SplitView.Content>
        </SplitView>
        
        <!-- Overlay -->
        <views:DimOverlay ZIndex="100"/>
    </Grid>
</Window>