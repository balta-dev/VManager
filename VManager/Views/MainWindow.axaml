    </SplitView.Pane>

            <!-- CONTENIDO PRINCIPAL (a la derecha de la sidebar) -->
            <SplitView.Content>
                <Grid>
                    <DockPanel Margin="0,0,0,0">

                        <!-- Botón Cambiar Tema abajo -->
                        <ToggleButton DockPanel.Dock="Top"
                                      x:Name="ToggleTheme"
                                      Theme="{DynamicResource ThemeToggleButton}"
                                      Content="Cambiar Tema"
                                      HotKey="T"
                                      HorizontalAlignment="Right"
                                      Margin="0,10,15,0"
                                      IsChecked="{Binding IsDarkTheme}"
                                      Command="{Binding ToggleThemeCommand}" />
                        
                        <!-- Footer -->
                        <Border DockPanel.Dock="Bottom" Padding="0 0 0 0" Background="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>  <!-- Izquierda: versión -->
                                    <ColumnDefinition Width="*"/>     <!-- Centro: botón adaptativo -->
                                    <ColumnDefinition Width="Auto"/>  <!-- Derecha: vacío para equilibrio -->
                                </Grid.ColumnDefinitions>

                                <!-- Izquierda -->
                                <TextBlock Grid.Column="0"
                                           Margin="0 25 0 5"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           FontSize="12"
                                           Opacity="0.7">
                                    <Run Text="{Binding L[Footer.Version]}"/>
                                    <Run Text="{Binding VersionText}"/>
                                </TextBlock>

                                <!-- Centro: botón adaptativo -->
                                <Button Grid.Column="1"
                                        Content="{Binding L[Footer.Title]}"
                                        Padding="0 20 0 20"
                                        Command="{Binding OpenGitHubCommand}"
                                        FontSize="15"
                                        Margin="-85 0 0 0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Opacity="0.7"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Cursor="Hand"/>
                            </Grid>
                        </Border>

                        <!-- Mensaje de bienvenida -->
                        <TextBlock DockPanel.Dock="Top" FontWeight="Bold" Text="{Binding WelcomeMessage}" 
                                   FontSize="25" Margin="0,30,0,0"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource AccentBrush}"
                                   IsVisible="{Binding IsWelcomeVisible}" />

                        <!--Descripción-->
                        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" HorizontalAlignment="Center" Spacing="10">
                            <StackPanel Opacity="0.7" IsVisible="{Binding IsWelcomeVisible}">
                                <TextBlock 
                                    FontSize="15" 
                                    Margin="30,5,20,0" 
                                    HorizontalAlignment="Center" 
                                    TextWrapping="Wrap"
                                    MaxWidth="700"
                                    Text="{Binding L[General.AppDescription]}" />
                            </StackPanel>
                        </StackPanel>

                        <!--Atajos -->
                        <StackPanel DockPanel.Dock="Top" MinWidth="400" HorizontalAlignment="Center" Opacity="0.75" IsVisible="{Binding IsWelcomeVisible}">
                            <TextBlock Text="{Binding L[General.Shortcuts.Title]}" FontWeight="SemiBold" FontSize="20" Margin="0,30,0,0" HorizontalAlignment="Center" />
                            <TextBlock FontSize="15" Margin="0,5,0,0" HorizontalAlignment="Center">
                                <Run FontWeight="Bold" Text="{Binding L[General.Shortcuts.Items.Item1Title]}" />
                                <Run Text="{Binding L[General.Shortcuts.Items.Item1Description]}"  />
                            </TextBlock>
                            <TextBlock FontSize="15" Margin="0,5,0,0" HorizontalAlignment="Center">
                                <Run FontWeight="Bold" Text="{Binding L[General.Shortcuts.Items.Item2Title]}" />
                                <Run Text="{Binding L[General.Shortcuts.Items.Item2Description]}" />
                            </TextBlock>
                            <TextBlock FontSize="15" Margin="0,5,0,0" HorizontalAlignment="Center">
                                <Run FontWeight="Bold" Text="{Binding L[General.Shortcuts.Items.Item3Title]}" />
                                <Run Text="{Binding L[General.Shortcuts.Items.Item3Description]}" />
                            </TextBlock>
                            <TextBlock FontSize="15" Margin="0,5,0,0" HorizontalAlignment="Center">
                                <Run FontWeight="Bold" Text="{Binding L[General.Shortcuts.Items.Item4Title]}" />
                                <Run Text="{Binding L[General.Shortcuts.Items.Item4Description]}" />
                            </TextBlock>
                            <TextBlock FontSize="15" Margin="0,5,0,0" HorizontalAlignment="Center">
                                <Run FontWeight="Bold" Text="{Binding L[General.Shortcuts.Items.Item5Title]}" />
                                <Run Text="{Binding L[General.Shortcuts.Items.Item5Description]}" />
                            </TextBlock>
                            <TextBlock FontSize="15" Margin="0,5,0,0" HorizontalAlignment="Center">
                                <Run FontWeight="Bold" Text="{Binding L[General.Shortcuts.Items.Item6Title]}" />
                                <Run Text="{Binding L[General.Shortcuts.Items.Item6Description]}" />
                            </TextBlock>
                        </StackPanel>

                        <Border DockPanel.Dock="Top" Margin="0,30,0,0" 
                                IsVisible="{Binding IsWelcomeVisible}"
                                BorderBrush="{DynamicResource BorderBrushPrimary}" 
                                BorderThickness="2" 
                                CornerRadius="10" 
                                Padding="20 20 20 0" 
                                Background="{DynamicResource PanelBackgroundBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ClipToBounds="True"
                                MaxWidth="800">
                            <WrapPanel Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Center">
                                <!-- Herramientas -->
                                <StackPanel IsVisible="{Binding IsWelcomeVisible}" MaxWidth="350">
                                    <TextBlock Text="{Binding L[General.Border.Title1]}" 
                                               FontWeight="SemiBold" 
                                               FontSize="15" 
                                               Margin="0,0,0,20" 
                                               HorizontalAlignment="Center" 
                                               TextWrapping="Wrap" />
                                    <TextBlock FontSize="13" Margin="30,7,0,0" HorizontalAlignment="Left" TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="{Binding L[General.Border.Items1.Item1Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item1Description]}" />
                                    </TextBlock>
                                    <TextBlock FontSize="13" Margin="30,7,0,0" HorizontalAlignment="Left" TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="{Binding L[General.Border.Items1.Item2Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item2Description]}" />
                                    </TextBlock>
                                    <TextBlock FontSize="13" Margin="30,7,0,0" HorizontalAlignment="Left" TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="{Binding L[General.Border.Items1.Item3Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item3Description]}" />
                                    </TextBlock>
                                    <TextBlock FontSize="13" Margin="30,9,0,30" HorizontalAlignment="Left" TextWrapping="Wrap">
                                        <Run Text="{Binding L[General.Border.Items1.Item4Title]}" />
                                        <Run Text="{Binding L[General.Border.Items1.Item4Description]}" />
                                    </TextBlock>
                                </StackPanel>
                                <!-- Como usar -->
                                <StackPanel IsVisible="{Binding IsWelcomeVisible}" MaxWidth="350">
                                    <TextBlock Text="{Binding L[General.Border.Title2]}" 
                                               FontWeight="SemiBold" 
                                               FontSize="15" 
                                               Margin="0,0,0,20" 
                                               HorizontalAlignment="Center" 
                                               TextWrapping="Wrap" />
                                    <TextBlock FontSize="13" Margin="30,5,0,0" HorizontalAlignment="Left" TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="1)" />
                                        <Run Text="{Binding L[General.Border.Items2.Item1Description]}"  />
                                    </TextBlock>
                                    <TextBlock FontSize="13" Margin="30,5,0,0" HorizontalAlignment="Left" TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="2)" />
                                        <Run Text="{Binding L[General.Border.Items2.Item2Description]}" />
                                    </TextBlock>
                                    <TextBlock FontSize="13" Margin="30,5,0,30" HorizontalAlignment="Left" TextWrapping="Wrap">
                                        <Run FontWeight="Bold" Text="3)" />
                                        <Run Text="{Binding L[General.Border.Items2.Item3Description]}" />
                                    </TextBlock>
                                </StackPanel>
                            </WrapPanel>
                        </Border>

                        <!-- Bottom -->
                        <TextBlock DockPanel.Dock="Bottom"
                                   FontSize="15"
                                   Margin="0,20,20,0"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   IsVisible="{Binding IsWelcomeVisible}"
                                   Text="{Binding L[Footer.Support]}" />

                        <ContentControl x:Name="ContentArea" Content="{Binding CurrentView}" Background="Transparent"/>
                    </DockPanel>
                </Grid>
            </SplitView.Content>
        </SplitView>
        <!-- Overlay -->
        <views:DimOverlay ZIndex="100"/>
    </Grid>
</Window>
