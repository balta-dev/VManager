<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:VManager.ViewModels"
             x:Class="VManager.Views.GuideVDownloadView"
             x:DataType="vm:AcercaDeViewModel">

    <StackPanel Spacing="16">

        <!-- Title -->
        <TextBlock Text="{Binding L[Guide.VDownload.title]}"
                   FontSize="22"
                   FontWeight="Bold"
                   TextWrapping="Wrap"/>

        <!-- Description -->
        <TextBlock Text="{Binding L[Guide.VDownload.description]}"
                   FontSize="15"
                   TextWrapping="Wrap"/>

        <!-- How To -->
        <StackPanel Spacing="8">
            <TextBlock Text="{Binding L[Guide.VDownload.howTo.title]}"
                       FontSize="16"
                       FontWeight="SemiBold"/>

            <TextBlock Text="{Binding L[Guide.VDownload.howTo.step1]}" FontSize="14" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding L[Guide.VDownload.howTo.step2]}" FontSize="14" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding L[Guide.VDownload.howTo.step3]}" FontSize="14" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding L[Guide.VDownload.howTo.step4]}" FontSize="14" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding L[Guide.VDownload.howTo.step5]}" FontSize="14" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Troubleshooting -->
        <StackPanel Spacing="8">
            <TextBlock Text="{Binding L[Guide.VDownload.troubleshooting.title]}"
                       FontSize="16"
                       FontWeight="SemiBold"/>

            <TextBlock Text="{Binding L[Guide.VDownload.troubleshooting.youtube.problem]}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>

            <TextBlock Text="{Binding L[Guide.VDownload.troubleshooting.youtube.description]}"
                       FontSize="14"
                       TextWrapping="Wrap"/>

            <TextBlock Text="{Binding L[Guide.VDownload.troubleshooting.youtube.solution]}"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- OS Instructions -->

        <!-- Windows -->
        <StackPanel Spacing="8"
                    IsVisible="{Binding IsWindows}">

            <TextBlock Text="Windows"
                       FontSize="16"
                       FontWeight="SemiBold"/>

            <WrapPanel Orientation="Horizontal"
                       VerticalAlignment="Center">

                <TextBlock Text="{Binding L[Guide.VDownload.osInstructions.windows.edge.description]}"
                           FontSize="14"
                           TextWrapping="NoWrap"/>

                <TextBlock Text=" "
                           FontSize="14"/>

                <TextBlock Text="cookies.txt"
                           FontSize="14"
                           Foreground="DodgerBlue"
                           FontWeight="Bold"
                           Cursor="Hand"
                           PointerPressed="OpenEdgeCookies"/>

                <TextBlock Text="."
                           FontSize="14"/>
            </WrapPanel>
            
            <WrapPanel Orientation="Horizontal"
                       VerticalAlignment="Center">

                <TextBlock Text="{Binding L[Guide.VDownload.osInstructions.windows.chrome.description]}"
                           FontSize="14"
                           TextWrapping="NoWrap"/>
                
                <TextBlock Text=" "
                           FontSize="14"/>

                <TextBlock Text="Get cookies.txt LOCALLY"
                           FontSize="14"
                           Foreground="DodgerBlue"
                           FontWeight="Bold"
                           Cursor="Hand"
                           PointerPressed="OpenChromeCookies"/>

                <TextBlock Text="."
                           FontSize="14"/>
            </WrapPanel>

            <TextBlock Text="{Binding L[Guide.VDownload.osInstructions.windows.otherBrowsers]}"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Linux / macOS -->
        <StackPanel IsVisible="{Binding IsLinuxMac}" Spacing="8">

            <TextBlock Text="Linux / macOS"
                       FontSize="16"
                       FontWeight="SemiBold"/>

            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding L[Guide.VDownload.osInstructions.linuxMac.description]}"
                           FontSize="14"
                           TextWrapping="Wrap"/>

                <TextBlock Text="{Binding L[Guide.VDownload.osInstructions.linuxMac.suggestion]}"
                           FontSize="14"
                           TextWrapping="Wrap"/>
                
                <TextBlock Text=" "
                           FontSize="14"/>

                <TextBlock Text="Get cookies.txt LOCALLY"
                           FontSize="14"
                           Foreground="DodgerBlue"
                           FontWeight="Bold"
                           Cursor="Hand"
                           PointerPressed="OpenChromeCookies"/>

                <TextBlock Text="."
                           FontSize="14"/>
            </WrapPanel>

        </StackPanel>

        <!-- Limitations -->
        <StackPanel Spacing="8">
            <TextBlock Text="{Binding L[Guide.VDownload.limitations.title]}"
                       FontSize="16"
                       FontWeight="SemiBold"/>

            <TextBlock Text="{Binding L[Guide.VDownload.limitations.item1]}"
                       FontSize="14"
                       TextWrapping="Wrap"/>

            <TextBlock Text="{Binding L[Guide.VDownload.limitations.item2]}"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </StackPanel>
        
    </StackPanel>
        
</UserControl>