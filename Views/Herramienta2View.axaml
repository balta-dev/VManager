<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VManager.Views.Herramienta2View"
             x:DataType="vm:Herramienta2ViewModel"
             xmlns:vm="using:VManager.ViewModels">
    
    <Border 
        BorderBrush="{DynamicResource BorderBrushPrimary}" 
        BorderThickness="2" 
        CornerRadius="10" 
        Padding="15" 
        Margin="20"
        Background="{DynamicResource PanelBackgroundBrush}">
        
    <StackPanel Margin="20" Spacing="10" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <!-- Selección de archivo de video -->
        <TextBlock Text="Seleccionar Video:" FontSize="14" Margin="0,0,0,5"/>
        <DockPanel>
            <Button Content="Examinar" Command="{Binding BrowseCommand}" Width="100" Margin="0,0,10,0"/>
            <TextBox Text="{Binding VideoPath}" IsReadOnly="True" Watermark="Ruta del video" Width="300"/>
        </DockPanel>

        <TextBlock Text="Video Codec:"/>
        <ComboBox ItemsSource="{Binding AvailableVideoCodecs}"
                  SelectedItem="{Binding SelectedVideoCodec, Mode=TwoWay}"
                  Width="200"/>

        <!-- Audio Codec -->
        <TextBlock Text="Audio Codec:"/>
        <ComboBox ItemsSource="{Binding AvailableAudioCodecs}"
                  SelectedItem="{Binding SelectedAudioCodec, Mode=TwoWay}"
                  Width="200"/>

        <!-- Duración 
        <TextBlock Text="Duración (HH:mm:ss):" FontSize="14" Margin="0,10,0,5"/>
        <TextBox Text="{Binding Duration}" Width="150" Watermark="Ej: 00:00:30"/> -->
        
        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
            <TextBlock Text="Porcentaje de Compresión:" FontSize="14" VerticalAlignment="Center"/>
            <TextBox Text="{Binding PorcentajeCompresionUsuario}" Width="30" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Botón para comprimir -->
        <Button Content="Comprimir Video" Command="{Binding CompressCommand}" Width="150" Margin="0,20,0,0" HorizontalAlignment="Center"/>

        <!-- Barra de progreso -->
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Progress}" Height="20" Width="300" Margin="0,5,0,0"/>

        <!-- Estado -->
        <TextBlock Text="{Binding Status}" FontSize="14" Margin="0,10,0,0" HorizontalAlignment="Center"/>
    </StackPanel>
    </Border>
    
</UserControl>
